{{> header title="Tobey Maguire | Multiverse"}}
    <div class="s-wrapper">
        {{> videoBackground video="spiderman-2002-trailer"}}
        <div class="s-left-column">
            {{> navbarside icon="spiderman1"}}
                <ul>
                    {{#each link}}
                        <li><a href="{{this.linkSite}}">{{this.num}}</a></li>
                    {{/each}}
                </ul>
            </nav>
        </div>
        <div class="s-main-content">
            <div class="s-main-content__top">
                {{> logoHero logoFilm="spiderman-tobey/movie-01/logo"}}

                {{> sinopsis
                    year= 2002 director="Sam Raimi"
                    resumen="Luego de sufrir la picadura de una araña genéticamente modificada, un estudiante de secundaria tímido y torpe adquiere increíbles capacidades como arácnido. Pronto comprenderá que su misión es utilizarlas para luchar contra el mal y defender a sus vecinos"
                }}

                {{> playTrailer linkTrailer="https://www.youtube.com/watch?v=cCXW3KE8Bto"}}
            </div>
            <div class="s-main-content__bottom">
                <div class="gallery">
                    <ul>
                        {{#each picture}}
                            <li><a data-fancybox href="/images/spiderman-tobey/movie-01/gallery/image-01-full.jpg"><img src="/images/{{this.actor}}/movie-{{this.numFolder}}/gallery/image-{{this.num}}.png" alt=""></a></li>
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div>
{{> footer}}